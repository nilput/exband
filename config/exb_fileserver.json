{
    "http" : {
        "servers" : [
            {
                "port" : "8085",
                "rules" : [
                    {
                        "prefix" : "/files/",
                        "destination": {
                            "type": "filesystem",
                            "path": "examples/static-files/"
                        }
                    }
                ]
                
            }
        ]
    },
    "event" : {
        "processes" : 0,
        "loops" : 4,
        "polling" : "epoll",
        "aio" : false,
        "threadpool": 0
    },
    "modules": [
        {
            "path": "examples/basic/basic.so:handler",
            "args" : {
                "db_path" : "./db.sqlite3",
                "db_reinit" : 0,
                "site_link" : "http://127.0.0.1:8085"
            }
        }
    ]
}
